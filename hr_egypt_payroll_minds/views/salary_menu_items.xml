                                    <field name="end_date" optional="show"/>
                                    <field name="is_run" optional="show" readonly="1"/>
                                    <field name="run_date" optional="show" readonly="1"/>
                                    <field name="active" optional="show"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                    </sheet>
                </form>
            </field>
        </record>

