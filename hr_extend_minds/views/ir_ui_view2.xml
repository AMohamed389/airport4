    <!-- bonus_batch-->
    <record id="action_bonus_batch" model="ir.actions.act_window">
      <field name="name">Bonus Batch</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">bonus_batch</field>
      <field name="view_mode">tree,form</field>


    </record>

    <record id="view_bonus_batch_list" model="ir.ui.view">
      <field name="name">view_bonus_batch_list</field>
      <field name="model">bonus_batch</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="date"/>
          <field name="state"/>
          <field name="number_of_employees"/>
          <field name="active"/>
        </tree>
      </field>
    </record>

    <record id="view_bonus_batch_form" model="ir.ui.view">
      <field name="name">view_bonus_batch_form</field>
      <field name="model">bonus_batch</field>

      <field name="arch" type="xml">
        <form  >
          <header>
            <button name="review" type="object" string="Review" class="oe_highlight" states="Draft" attrs="{}"/>
            <button name="confirm" type="object" string="Confirm" class="oe_highlight" states="In Review" attrs="{}"/>
            <button name="cancel" type="object" string="Cancel" class="oe_highlight btn-danger" states="Draft,In Review" attrs="{}"/>
            <button name="rerun" type="object" string="Re-Run" class="oe_highlight btn-warning" states="In Review" attrs="{}"/>
             

             <field name="state" widget="statusbar" />
          </header>

          <sheet>

            <div name="button_box" class="oe_button_box">
            </div>
            <div class="oe_title">
              <h1>
                <field name="name" placeholder="Name"/>
              </h1>
            </div>


            <group name="main_group">
              <group name="group_left">
                <field name="date"/>
                <field name="active" readonly="1"/>
              </group>
              <group name="group_right">
                <field name="number_of_employees"/>
              </group>
            </group>


            <notebook name="main_notebook">
                <page name="employees" string="Employees">
                  <field name="employee_bonus"/>
                </page>
              </notebook>


          </sheet>
          <div class="oe_chatter" name="mainchatterview">
            <field name="message_follower_ids"/>
            <field name="activity_ids"/>
            <field name="message_ids"/>
          </div>
        </form>
      </field>
    </record>
  


